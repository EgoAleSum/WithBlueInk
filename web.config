<?xml version="1.0"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="Redirect withblueink.azurewebsites.net" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^withblueink.azurewebsites.net$" />
          </conditions>
          <action type="Redirect" url="http://withblue.ink/{R:0}" appendQueryString="true" redirectType="Permanent" />
        </rule>
        <rule name="Redirect withblueink.com" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^withblueink.com$" />
          </conditions>
          <action type="Redirect" url="http://withblue.ink/{R:0}" appendQueryString="true" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>